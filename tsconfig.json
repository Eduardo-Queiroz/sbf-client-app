{
  "references": [
    {"path": "./types"},
    {"path": "./providers/elements"},
    {"path": "./providers/components"},
    {"path": "./providers/redux"},
    {"path": "./providers/locale"}
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "composite": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": ["elevation", "resize-mode"]
        }
      }
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
